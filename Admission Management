    <script>
        // Simple form validation
        document.querySelector('.application-form').addEventListener('submit', function(e) {
            e.preventDefault();
            
            const firstName = document.getElementById('firstName').value;
            const lastName = document.getElementById('lastName').value;
            const email = document.getElementById('email').value;
            const program = document.getElementById('program').value;
            
            if (!firstName || !lastName || !email || !program) {
                alert('Please fill in all required fields.');
                return;
            }
            
            alert('Application submitted successfully! You will receive a confirmation email shortly.');
            this.reset();
        });
        
        // Status check functionality
        document.querySelector('.status-container .submit-btn').addEventListener('click', function() {
            const applicationId = document.getElementById('applicationId').value;
            
            if (!applicationId) {
                alert('Please enter your Application ID.');
                return;
            }
            
            alert('Application status: Under Review. We will notify you once a decision has been made.');
        });
    </script>
